<!DOCTYPE html>
<html ng-app="actimer">
<head>
    <title>ACTimer</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="stylesheets/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/font-awesome-4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="stylesheets/awesome-bootstrap-checkbox.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="javascripts/ACTimer.js"></script>
</head>
<body>
<div class="container">
    <div class="column full" >
        <div class="form-group">
            <div class="row clearfix">
                <div class="input-group column full">
                    <input type="text" id="timerDescription" class="form-control" placeholder="Description" name="timerDescription">
                </div>
            </div>
            <div class="row clearfix">
                <div class="input-group column third">
                    <input type="text" id="timerHours" class="form-control" placeholder="Hours" name="timerHours">
                </div>
                <div class="input-group column third">
                    <input type="text" id="timerMinutes" class="form-control" placeholder="Mins" name="timerMinutes">
                </div>
                <div class="input-group column third">
                    <input type="text" id="timerSeconds" class="form-control" placeholder="secs" name="timerSeconds">
                </div>
            </div>
            <div class="row clearfix">
                <div class="dropdown column half" ng-controller="CategoryController">
                    <select name="category" class="wide" ng-model="selectedCategory">
                        <option ng-repeat="category in categories" value="{{category.categoryId}}">{{category.categoryName}}</option>
                    </select>
                </div>
                <div class="input-group column half">
                    <input type="date" id="timerDate" name="timerDate">
                </div>
            </div>
            <div class="row clearfix" ng-controller="ProjectsTasksController">
                <div class="dropdown column half" >
                    <select name="project" class="wide" ng-model="selectedProject" ng-change="loadTasks()">
                        <option ng-repeat="project in projects" value="{{project.projectId}}">{{project.projectName}}</option>
                    </select>
                </div>
                <div class="dropdown column half">
                    <select name="task" class="wide" ng-model="selectedTask">
                        <option ng-repeat="task in tasks" value="{{task.taskId}}">{{task.taskName}}</option>
                    </select>
                </div>
            </div>
            <div class="row clearfix">
                <div class="input-group column full">
                    <input type="submit" value="Add Timer" class="btn btn-primary">
                    <div class="checkbox checkbox-inline">
                        <input type="checkbox" id="timerBillable"  name="timerBillable">
                        <label for="timerBillable">Billable</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
